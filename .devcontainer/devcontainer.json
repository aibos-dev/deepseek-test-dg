{
  "name": "DeepSeek Test DG",
  "dockerComposeFile": "../docker-compose.yaml",
  "service": "deepseek-test-dg",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",
  "customizations": {
      "vscode": {
          "extensions": [
              "ms-python.python",
              "ms-python.mypy-type-checker",
              "njpwerner.autodocstring",
              "usernamehw.errorlens",
              "charliermarsh.ruff"
          ],
          "settings": {
              "editor.insertSpaces": true,
              "editor.fontSize": 14,
              "files.autoSave": "afterDelay",
              "files.autoSaveDelay": 2000,
              "[python]": {
                  "editor.formatOnPaste": false,
                  "editor.formatOnType": false,
                  "editor.formatOnSave": true,
                  "editor.formatOnSaveTimeout": 3000,
                  "editor.codeActionsOnSave": {
                      "source.fixAll.ruff": "explicit",
                      "source.organizeImports.ruff": "always"
                  },
                  "editor.defaultFormatter": "charliermarsh.ruff"
              },
              "python.defaultInterpreterPath": "/usr/bin/python",
              "ruff.interpreter": [
                  "/usr/bin/python"
              ],
              "ruff.configuration": "${containerWorkspaceFolder}/pyproject.toml",
              "ruff.path": [
                  "/usr/local/bin/ruff"
              ],
              "ruff.lint.args": [
                  "--config=${containerWorkspaceFolder}/pyproject.toml"
              ],
              "ruff.format.args": [
                  "--config=${containerWorkspaceFolder}/pyproject.toml"
              ],
              "mypy-type-checker.interpreter": [
                  "/usr/bin/python"
              ],
              "mypy-type-checker.args": [
                  "--config-file=${containerWorkspaceFolder}/pyproject.toml"
              ],
              "mypy-type-checker.path": [
                  "/usr/local/bin/mypy"
              ],
              "python.testing.pytestPath": "/usr/local/bin/pytest",
              "python.testing.pytest": [
                  "--config=${containerWorkspaceFolder}/pyproject.toml"
              ],
              "python.testing.unittestEnabled": false,
              "python.testing.pytestEnabled": true,
              "autoDocstring.docstringFormat": "numpy",
              "errorLens.delay": 500
          }
      }
  }
}
